// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// Profile Set - a collection of monitored profiles
model ProfileSet {
  id          String   @id @default(cuid())
  name        String   @unique
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Linked Twitter/X Account for posting (optional)
  twitterAccountId  String?
  twitterAccount    TwitterAccount? @relation(fields: [twitterAccountId], references: [id])

  profiles    MonitoredProfile[]
}

// Twitter/X Account for multi-account posting
model TwitterAccount {
  id              String   @id @default(cuid())
  username        String   @unique  // @BundesligaWatch, @LaLigaWatch, etc.
  displayName     String?           // "Bundesliga Watch ðŸ‡©ðŸ‡ª"
  sessionPath     String?           // Path to session JSON file
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Sets linked to this account
  sets            ProfileSet[]
}

// A profile being monitored for changes
model MonitoredProfile {
  id                    String   @id @default(cuid())
  username              String   @unique
  fullName              String?
  profilePicUrl         String?
  isPrivate             Boolean  @default(false)
  isVerified            Boolean  @default(false)
  followerCount         Int?
  followingCount        Int?
  lastCheckedAt         DateTime?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  // Baseline tracking - nur wenn true, kÃ¶nnen Changes erkannt werden
  isBaselineComplete    Boolean  @default(false)
  baselineCreatedAt     DateTime?  // Wann wurde die Baseline erstellt
  baselineFollowingCount Int?       // Following-Anzahl bei Baseline-Erstellung
  lastSuccessfulScrapeAt DateTime?
  
  // Screenshot of the profile (latest)
  screenshotUrl         String?

  // Many-to-Many: Ein Profil kann in mehreren Sets sein
  sets            ProfileSet[]

  // The current list of accounts this profile follows
  followingList   FollowingEntry[]
  
  // History of changes detected
  changes         ChangeEvent[]
}

// Current following list entry for a monitored profile
model FollowingEntry {
  id              String   @id @default(cuid())
  username        String
  fullName        String?
  profilePicUrl   String?
  isPrivate       Boolean  @default(false)
  isVerified      Boolean  @default(false)
  addedAt         DateTime @default(now())
  
  // Position tracking for smart unfollow detection
  position        Int      @default(0)    // Position in the following list (0 = top/newest)
  lastSeenAt      DateTime @default(now()) // When this entry was last seen in a scrape
  missedScans     Int      @default(0)    // How many scans this entry was missing from

  profileId       String
  profile         MonitoredProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([profileId, username])
}

// Change event - when someone follows or unfollows
model ChangeEvent {
  id              String   @id @default(cuid())
  type            String   // "FOLLOW" or "UNFOLLOW" or "PENDING_UNFOLLOW"
  
  // The target user who was followed/unfollowed
  targetUsername  String
  targetFullName  String?
  targetPicUrl    String?
  
  // Timestamp of detection
  detectedAt      DateTime @default(now())
  
  // Screenshot of the monitored profile at time of change
  screenshotUrl   String?
  
  // Confirmation status for unfollows
  isConfirmed     Boolean  @default(true)  // true for FOLLOW, needs confirmation for UNFOLLOW
  confirmedAt     DateTime?
  
  // Whether this change has been processed (sent to n8n)
  processed       Boolean  @default(false)
  processedAt     DateTime?

  profileId       String
  profile         MonitoredProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

// App configuration (n8n webhook URL, etc.)
model AppConfig {
  id              String   @id @default("app_config")
  n8nWebhookUrl   String?
  checkIntervalMs Int      @default(1800000) // 30 minutes default
  delayBetweenProfilesMs Int @default(45000) // 45 seconds between profiles
  updatedAt       DateTime @updatedAt
}

// Monitoring Log - Bericht pro Cron-Job-Durchlauf
model MonitoringLog {
  id              String   @id @default(cuid())
  
  // Profil-Referenz
  profileId       String
  profileUsername String
  
  // Status
  status          String   // "SUCCESS", "PARTIAL", "FAILED", "NO_CHANGE", "SKIPPED"
  
  // Scraping-Details
  followingCountLive    Int?       // Aktuelle Zahl auf Instagram
  followingCountDb      Int?       // Zahl in der DB vor dem Run
  followerCountLive     Int?       // Aktuelle Follower-Zahl
  scrapedCount          Int?       // Anzahl gescrapte Following
  scrapeQuote           Float?     // Prozent gescrapt (z.B. 95.5)
  
  // Ã„nderungen
  newFollowsCount       Int        @default(0)
  unfollowsCount        Int        @default(0)
  newFollows            String?    // JSON Array der neuen Follows
  unfollows             String?    // JSON Array der Unfollows
  
  // Fehler-Details
  errorMessage          String?
  
  // Timing
  durationMs            Int?       // Wie lange der Scrape dauerte
  createdAt             DateTime   @default(now())
  
  // Index fÃ¼r schnelle Abfragen
  @@index([profileId])
  @@index([createdAt])
  @@index([status])
}
